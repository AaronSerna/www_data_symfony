{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<style>

		body {
			background-color: white;
		}

		.form-group {
			border-radius: 6px;
			border: 1px solid black;
			box-shadow: -0.088px 2.398px 8.288px 0 rgba(0, 0, 0, 0.04), -0.439px 11.992px 51px 0 rgba(0, 0, 0, 0.07);
			background-color: white;
		}

		.col-md-12 {
			top: 20%;
		}
	</style>

	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}


	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12 d-flex justify-content-center text-center align-items-center position-absolute">
				<form action="{{ path('app_login') }}" method="post" class="text-center form-group">

					<div class="icono mb-3 mt-3">
						<img src="{{ asset('images/logo_samoo_pentec_negro.png') }}" alt="" class="img-fluid" style="width: 40%">

					</div>

					<h2>Iniciar sesi칩n</h2>
					<label for="username" class="form-label mt-2">Email:</label>
					<input type="text" id="username" name="_username" class="form-control w-50 mx-auto text-center" value="{{ last_username }}">
					<br>

					<label for="password" class="form-label">Contrase침a:</label>
					<div class="input-group w-50 mx-auto text-center">
						<input type="password" id="password" name="_password" class="form-control mx-auto text-center">
						<span class="input-group-text">
							<i id="eye-icon" class="bi bi-eye"></i>
						</span>
					</div>

					<a href="/reset-password" class="">He olvidado la contrase침a</a>

					<br>


					<div class="checkbox mt-3">
						<label>
							<input type="checkbox" name="_remember_me">
							Recordarme
						</label>
					</div>


					{# If you want to control the URL the user is redirected to on success #}

					<input type="hidden" name="_target_path" value="{{ path('app_inicio') }}">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<button type="submit" class="btn btn-primary mt-4 mb-4">Iniciar sesi칩n</button>
					<!--	<a href="/register" class="btn btn-light border border-dark mx-2">Registrarse</a> -->

				</form>
			</div>
		</div>
	</div>

{% endblock %}
